{% extends "base.jinja2" %}
{% block content %}

    <div class="collapse navbar-collapse" id="Street_Nav">
      <ul class="nav navbar-nav">
        <li><a href="/">New Search </a></li>
        <li><a href="#" >Street Lists</a></li>
        <li class="active"><a href="#" style="background-color:#13019e">Street Reports<span class="sr-only">(current)</span></a></li>
        <li><a href="/about.jinja2">About</a></li>
      </ul>
    </div>
  </div>
</nav>

<script>
    // JS for operating the Print button at bottom of page. Note the Print button class, nav bar class etc.
    // have 'hidden-print' Bootstrap class inserted, to stop unwanted parts of page printing.
    function printpage() {
    window.print();
}
</script>

<div class="content container">
    <div class="jumbotron">

        <!-- div class="page-header">
            <h2>Street Report</h2>
        </div -->
<form class="form-horizontal">
    <fieldset>
        <div class="form-group has-warning">
        <div class="col-lg-4">
          <label class="control-label hidden-print" for="Ref">Please Enter Reference Number</label>
          <input type="text" class="form-control" id="Ref">
        </div>
            <div class="col-lg-2">
            </div>
        <div class="col-lg-6">
            <h4 style="margin-top: 45px">{{ report.datestring }}</h4>
        </div>
        </div>
    </fieldset>
</form>



        <div class="panel panel-primary">
  <div class="panel-heading">
      <div class="panel-title" style="font-size:21px">CON29 Street Report for: {{ report.title }}</div>
  </div>
  <div class="panel-body">
    {{ report.maintext }}
  </div>
</div>

{% if (report.side1text != "") %}
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Box C Street 1</h3>
      </div>
      <div class="panel-body">
        {{ report.side1text }}
      </div>
    </div>
{% endif %}

{% if (report.side2text != "") %}
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Box C Street 2</h3>
      </div>
      <div class="panel-body">
        {{ report.side2text }}
      </div>
    </div>
{% endif %}

{% if (report.side3text != "") %}
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Box C Street 3</h3>
      </div>
      <div class="panel-body">
        {{ report.side3text }}
      </div>
    </div>
{% endif %}

<form class="form-horizontal">
    <fieldset>
        <div class="form-group has-warning">
        <div  class="col-lg-12">
          <label class="control-label hidden-print" for="Notes">Space for any Notes on this Search</label>
            <textarea class="form-control" rows="5" id="Notes"></textarea>
        </div>

        </div>

         <center>
             <button class="btn btn-primary hidden-print" onclick="printpage()"><span class="glyphicon glyphicon-print" aria-hidden="true"></span> Print</button>
	    </center>

    </fieldset>
</form>



        <!-- p>test report id: {{ reportid }}</p -->

    </div>
{% endblock %}

