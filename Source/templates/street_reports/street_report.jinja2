{% extends "base.jinja2" %}
{% block content %}

<script>
    // JS for operating the Print button at bottom of page. Note the Print button class, nav bar class etc.
    // have 'hidden-print' Bootstrap class inserted, to stop unwanted parts of page printing.
    function printpage() {
    window.print();
}
</script>

<form class="form-horizontal">
    <fieldset>
        <div class="form-group has-warning">
            <div class="col-lg-4">
              <label class="control-label hidden-print" for="Ref">Please Enter Reference Number</label>
              <input type="text" class="form-control" id="Ref">
            </div>
                <div class="col-lg-2">
                </div>
            <div class="col-lg-6">
                <h4 class="date">{{ report.datestring }}</h4>
            </div>
        </div>
    </fieldset>
</form>

    <div class="panel panel-primary">
    {% if report.maindummy == False %}
        <div class="panel-heading">
    {% else %}
           <!-- custom CSS colours seem unable to override Bootstrap panel-heading class-->
        <div class="panel-heading dummytitle">
    {% endif %}
            <div class="panel-title title_font">CON29 Street Report for: {{ report.title }}</div>
        </div>
          <div class="panel-body">
              {% if report.maindummy == True %}<div class="dummywarn">THIS IS A DUMMY STREET ENTERED IN THIS APP, NOT A 'REAL' STREET.<br/></div>{% endif %}
            {{ report.maintext }}
          </div>
    </div>

{% if (report.side1text != "") %}
    <div class="panel panel-primary">
    {% if report.side1dummy == False %}
        <div class="panel-heading">
    {% else %}
        <div class="panel-heading dummytitle">
    {% endif %}
        <h3 class="panel-title">Box C Street 1</h3>
      </div>
      <div class="panel-body">
          {% if report.side1dummy == True %}<div class="dummywarn">THIS IS A DUMMY STREET ENTERED IN THIS APP, NOT A 'REAL' STREET.<br/></div>{% endif %}
        {{ report.side1text }}
      </div>
    </div>
{% endif %}

{% if (report.side2text != "") %}
    <div class="panel panel-primary">
        {% if report.side2dummy == False %}
            <div class="panel-heading">
        {% else %}
            <div class="panel-heading dummytitle">
        {% endif %}
            <h3 class="panel-title">Box C Street 2</h3>
            </div>
      <div class="panel-body">
          {% if report.side2dummy == True %}<div class="dummywarn">THIS IS A DUMMY STREET ENTERED IN THIS APP, NOT A 'REAL' STREET.<br/></div>{% endif %}
        {{ report.side2text }}
      </div>
    </div>
{% endif %}

{% if (report.side3text != "") %}
    <div class="panel panel-primary">
        {% if report.side3dummy == False %}
            <div class="panel-heading">
        {% else %}
            <div class="panel-heading dummytitle">
        {% endif %}
        <h3 class="panel-title">Box C Street 3</h3>
            </div>
      <div class="panel-body">
          {% if report.side3dummy == True %}<div class="dummywarn">THIS IS A DUMMY STREET ENTERED IN THIS APP, NOT A 'REAL' STREET.<br/></div>{% endif %}
        {{ report.side3text }}
      </div>
    </div>
{% endif %}

<form class="form-horizontal">
    <fieldset>
        <div class="form-group has-warning">
        <div  class="col-lg-12">
          <label class="control-label hidden-print" for="Notes">Space for any Notes on this Search</label>
            <textarea class="form-control" rows="5" id="Notes"></textarea>
        </div>

        </div>

         <center>
             <button class="btn btn-primary hidden-print" onclick="printpage()"><span class="glyphicon glyphicon-print" aria-hidden="true"></span> Print</button>
	    </center>

    </fieldset>
</form>



        <!-- p>test report id: {{ reportid }}</p -->

    </div>

{% endblock %}

